{
  "compilerOptions": {
    "module": "CommonJS",
    "moduleResolution": "Node",
    "target": "ES6",
    "outDir": "dist",
    "strict": true,
    "pretty": true,
    "allowJs": false,
    "sourceMap": true,
    "lib": ["es2017", "ES2018", "ES2019", "ES2020"],
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
